@model Funtime
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Add Activity</title>
</head>
<body>
    <h1>Dojo Activity Center <a href="dashboard" class="btn btn-primary">Home</a> <a href="/logout" class="btn btn-danger">Log Out</a></h1>
    <h3>Create an Activity</h3>
    <form asp-action="AddActivity" asp-controller="Home" method="post">
        <div class="form-group">
            <label asp-for="Title">Title</label>
            <span asp-validation-for="Title"></span>
            <input asp-for="Title" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="Time">Time</label>
            <span asp-validation-for="Time"></span>
            <input type="time" asp-for="Time" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="Date">Date</label>
            <span asp-validation-for="Date"></span>
            <input type="date" asp-for="Date" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="Duration">Duration</label>
            <span asp-validation-for="Duration"></span>
            <input type="number" min="0" asp-for="Duration" class="form-control">
        </div>
        <select class="form-control" asp-for="Length">
            <option value="Hours">Hours</option>
            <option value="Minutes">Minutes</option>
            <option value="Days">Days</option>
        </select>
        <div class="form-group">
            <label asp-for="Description">Description</label>
            <span asp-validation-for="Description"></span>
            <input asp-for="Description" class="form-control">
        </div>
        <input type="submit" class="btn btn-success">
    </form>
</body>
</html>